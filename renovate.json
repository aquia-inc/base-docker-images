{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "default:automergeDigest"
  ],
  "pre-commit": {
    "enabled": true
  },
  "assigneesFromCodeOwners": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "schedule": [
    "every 3 hours"
  ],
  "timezone": "America/New_York",
  "automerge": true,
  "platformAutomerge": true,
  "major": {
      "automerge": false
    },
  "minor": {
    "automerge": true,
    "groupName": "minor dependencies",
    "groupSlug": "all-minor"
  },
  "patch": {
    "automerge": true,
    "groupName": "patch dependencies",
    "groupSlug": "all-patch"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "labels": [
    "renovate",
    "dependencies"
  ],

  "terraform": {
    "enabled": false
  },
  "packageRules": [
    {
      "description": "For any APK package in a Dockerfile, only allow patch and pin updates. This enforces the 'major.minor.x' pinning strategy.",
      "matchManagers": ["dockerfile"],
      "matchDatasources": ["alpine-packages"],
      "updateTypes": ["patch", "pin"]
    },
    {
      "description": "For any Docker FROM image, allow minor and patch updates.",
      "matchManagers": ["dockerfile"],
      "matchDatasources": ["docker"],
      "updateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "description": "Group all updates by their source Dockerfile to create logical PRs.",
      "matchManagers": ["dockerfile"],
      "groupName": "{{{replace '.*/' '' dep.paths.[0]}}} dependencies",
      "groupSlug": "{{{replace '.*/' '' dep.paths.[0]}}}-dependencies"
    }
  ]
}
